          <form action="/users/register" id="formRegister" class="inputs-container" method="POST" enctype="multipart/form-data">
            <label for="nombre"></label>
            <div>
              <input class="input-register" type="text" name="firstName" id="name" placeholder="Ingrese su nombre" value="<%= locals.old && old.firstName %>"/><i class="fas fa-check-circle" id="input-name"></i>
            </div>
            <span id="nameErrors"></span>
            <% if (locals.errors && errors.firstName) { %>
              <small class="msg-error"><%= errors.firstName.msg %></small>             
            <% } %>
            <label for="apellido"></label>
            <div>
              <input class="input-register" type="text" name="lastname" id="apellido" placeholder="Ingrese su apellido" value="<%= locals.old && old.lastname %>"/><i class="fas fa-check-circle" id="input-lastName"></i>
            </div>
            <span id="lastNameErrors"></span>
            <% if (locals.errors && errors.lastname) { %>
              <small class="msg-error"><%= errors.lastname.msg %></small>
            <% } %>
            <label for="email"></label>
            <div>
              <input class="input-register" type="email" name="email" id="inputEmail" placeholder="email"/><i class="fas fa-check-circle" id="input-email"></i>
            </div>
            <span id="emailErrors"></span>
            <% if (locals.errors && errors.email) { %>
              <small class="msg-error"><%= errors.email.msg %> </small>
            <% } %>
            <label for="password"></label>
            <div>
              <input class="input-register" type="password" id="password" name="pass" placeholder="Contraseña"/><i class="fas fa-check-circle" id="input-pass"></i>
            </div>
            <span id="passwordErrors"></span>
            <% if (locals.errors && errors.pass) { %>
              <small class="msg-error"><%= errors.pass.msg %> </small>
            <% } %>
            <label for="phone"></label>
            <input class="input-register" type="text" name="phone" placeholder="telefono"/>
            <% if (locals.errors && errors.phone) { %>
              <small class="text-danger"><%= errors.phone.msg %> </small>
            <% } %>

