<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <div class="container-detail">
                <div class="product-detail">
                    <div class="img-container-detail">
                        <img id="imageBox" src="/images/productos/<%- product.image %>">
                    </div>
                    <!--             <div class="product-small-img">
                <img src="/images/productos/" onclick="cambiar(this)">
                <img src="/images/productos/" onclick="cambiar(this)">
                <img src="/images/productos/" onclick="cambiar(this)">
                <img src="/images/productos/" onclick="cambiar(this)">
            </div> -->
                </div>
                <div class="inf-detail">
                    <h2 class="detail-name">
                        <%- product.name %>
                    </h2>
                    <h3 class="price-detail">$<%- product.price %>
                    </h3>
                    <h3 class="text-detail">
                        <%- product.stock %>
                    </h3>
                    <h3 class="text-detail">Envios a todo el país</h3>
                    <h3 class="text-detail">Garantía <%- product.garantia %>
                    </h3>
                    <label class="text-detail" for="cantidad">Cantidad: </label>
                    <select class="selector-cant" id="dropdown" class="input-register" required>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                    <div class="button-container-detail">
                        <!--                 <button class="button-detail">Agregar al carrito</button> -->
                        <button class="button-detail">Comprar</button>
                    </div>
                </div>
            </div>
            <section class="details">
                <article class="article-detalle">
                    <h4>Descripción</h4>
                    <p class="p-detalle">
                        <%- product.description %>
                    </p>
                </article>
                <article class="article-detalle">
                    <h4>Especificaciones del producto:</h4>
                    <p class="p-detalle">
                        <%- product.specifications %>
                    </p>
                </article>
            </section>
            <script type="text/javascript">
                function cambiar(smallImg) {
                    var fullImg = document.getElementById("imageBox");
                    fullImg.src = smallImg.src;
                }
            </script>


            <%- include('../partials/footer') %>





    </body>

</html>