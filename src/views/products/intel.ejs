<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <section class="productos">
                <h3 class="title-card intel">Productos de la marca intel</h3>
                <article class="productos-article">
                    <% products.forEach(product => { %>
                        <% if (product.marca == "intel") { %>
                            <div class="productos-article__card">
                                <div class="card-img">                        
                                    <a href="/products/detail/<%- product.id %>"><img src="/images/productos/<%- product.productImages[0].image %>"></a>
                                    <h5 class="descripcion-producto"><%- product.name %></h5>
                                    <p class="price">$<%= product.price - product.price * product.discount / 100 %></p>
                                </div>
                                <div class="button-producto">
                                    <a href="/products/detail/<%- product.id %>">VER PRODUCTO</a>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                </article>
            </section>
        <%- include('../partials/footer') %>
        <script src="/js/carrusel.js"></script>
    </body>

</html>